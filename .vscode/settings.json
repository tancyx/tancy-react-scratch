{
    // 保存时格式化
    "editor.formatOnSave": true,
    // 默认格式化 prettier
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2,
    // json 文件关联为 jsonc
    "files.associations": {
        "*.json": "jsonc"
    },
    // 默认行尾字符
    "files.eol": "\n",
    // eslint 需要校验的语言
    "eslint.validate": [
        "javascript",
        "javascriptreact",
        "typescript",
        "typescriptreact",
    ],
}